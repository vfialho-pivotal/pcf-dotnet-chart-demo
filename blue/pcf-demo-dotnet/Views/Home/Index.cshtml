
@{
    ViewBag.Title = "Home";
}

<!DOCTYPE html>
<html>
<body>
    <div id="charts">
        @Html.Partial("Chart")
    </div>
    <div>
        <button id='killbutton' ; style="color: white; background-color: red">Kill App</button>
    </div>
</body>
</html>
<script type="text/javascript">

    $(function () {
        setInterval(function () { $('#charts').load('/Home/GetChart'); }, 3000); // every 3 sec
    });

    $('#killbutton').click(function () {
        $.post("Home/KillApp");
    });

</script>




